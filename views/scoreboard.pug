include index

head
 script(src="https://cdn.jsdelivr.net/npm/chart.js")

body
 canvas(id="bar-chart")
 script.
  new Chart(document.getElementById("bar-chart"), {
    type: 'bar',
    data: {
      labels: !{JSON.stringify(teamList)},
      datasets: [
        {
          label: "Team Scores",
          data: !{JSON.stringify(teamPoint)},
          backgroundColor: '#85c1dc',
          color: "#c6d0f5",
        },
      ]
    },
    options: {
      legend: { display: false },
      title: {
        display: true,
        text: 'Scoreboard'
      }
    }
  });
 

