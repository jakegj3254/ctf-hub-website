include index

body
 form.form-container(action="/chals/" method="post")
  h3.form-title Create New Challenge
  label(for="new-chal-title") Challenge Title
  input(type="text", name="title", required=true, maxlength="64")
  label(for="new-chal-category") Category
  select(name="category")
   option(value="crypto") crypto
   option(value="rev") rev
   option(value="pwn") pwn
   option(value="web") web
   option(value="misc") misc
  label(for="new-chal-points") Points 
  input(type="number", name="points", required=true, min=0, max=2147483647)
  label(for="new-chal-desciption") Description
  input(type="text", name="description", required=true, maxlength="1024")
  label(for="new-chal-flag") Flag
  input(type="text", required=true, name="flag" maxlength="64")
  .form-button-container
   input.submit-new-chal-button(type="submit", value="Submit Challenge")
